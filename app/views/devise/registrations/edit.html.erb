<div class="container">
  <div class="d-flex justify-content-between mt-3">
    <div class="col-12 col-md-6 justify-content-center">
      <h2 class="my-3">Editar Perfil</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :first_name,
                      required: true,
                      placeholder: "",
                      autofocus: true %>
          <%= f.input :last_name,
                      required: true,
                      placeholder: "",
                      autofocus: true %>
          <%= f.input :address,
                      required: true,
                      placeholder: "",
                      autofocus: true %>
          <%= f.input :phone,
                      required: true,
                      autofocus: true,
                      placeholder: "",
                      input_html: { autocomplete: "phone" }%>
          <%= f.input :dni,
                      required: true,
                      placeholder: "",
                      autofocus: true %>
          <%= f.input :email,
                      placeholder: "",
                      required: true,
                      input_html: { autocomplete: "email" }%>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Esperando confirmaci√≥n: <%= resource.unconfirmed_email %></p>
          <% end %>
          <%= f.input :password,
                      hint: "leave it blank if you don't want to change it",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :current_password,
                      hint: "we need your current password to confirm your changes",
                      required: true,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :photo, as: :file, label:"Foto de perfil", required: true %>
        </div>
        <div class="form-actions d-flex justify-content-between">
          <%= f.button :submit, "Actualizar", class:"btn btn-success" %>
          <%= link_to "Volver", :back, class:"btn btn-primary" %>
          <%= button_to "Cancelar mi cuenta", registration_path(resource_name), class:"btn btn-secondary", data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
        </div>
      <% end %>
    </div>
    <div class="col-12 col-md-5 mt-7" id="poster">
      <%= image_tag "https://wallpaperaccess.com/full/2074807.jpg", width:"100%" %>
    </div>
  </div>
</div>
