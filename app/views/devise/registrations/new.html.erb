  <style>
    .cascading-right {
      margin-right: -50px;
    }

    @media (max-width: 991.98px) {
      .cascading-right {
        margin-right: 0;
      }
    }
  </style>

<div class="container pt-2 p-6">
    <div class="row g-0 align-items-center">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
            <div class="card-body p-5 shadow-5 text-center form-outline mb-4" data-aos="fade-down-right">
            <h2 class="fw-bold mb-5">Registrarse</h2>
                          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), wrapper: :floating_labels_form, wrapper_mappings:{select: :floating_labels_select} ) do |f| %>
                            <%= f.error_notification %>

                              <%= f.input :first_name,
                                          required: true,
                                          placeholder: "",
                                          autofocus: true %>
                              <%= f.input :last_name,
                                          required: true,
                                          placeholder: "",
                                          autofocus: true %>
                              <%= f.input :address,
                                          required: true,
                                          placeholder: "",
                                          autofocus: true %>
                              <%= f.input :phone,
                                          required: true,
                                          autofocus: true,
                                          placeholder: "",
                                          input_html: { autocomplete: "phone" }%>
                              <%= f.input :dni,
                                          required: true,
                                          placeholder: "",
                                          autofocus: true %>
                              <%= f.input :email,
                                          placeholder: "",
                                          required: true,
                                          input_html: { autocomplete: "email" }%>
                              <%= f.input :password,
                                          required: true,
                                          placeholder: "",
                                          hint: ("#{@minimum_password_length} características mínimas." if @minimum_password_length),
                                          input_html: { autocomplete: "new-password" } %>
                              <%= f.input :password_confirmation,
                                          required: true,
                                          placeholder: "",
                                          input_html: { autocomplete: "new-password" } %>
                              <%= f.input :photo, as: :file, label:"Foto de perfil", required: true %>
                            <div class="form-actions btn btn-primary btn-block mb-4">
                              <%= f.button :submit, "Sign up" %>
                            </div>
                          <% end %>

                          <%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
    <div class="col-md-6 px-0 d-none d-md-block rounded" data-aos="fade-down-left">
      <%= image_tag "https://i.pinimg.com/originals/6a/26/a0/6a26a048447603a93ac76b285bcadbd6.jpg", width:"100%", class:"w-100 vh-100 rounded mb-10", style:"margin-left:60px" %>
    </div>
  </div>
</div>
